<div class="panel panel-default">
<h2> Listing groups </h2>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Group name</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_name %></td>
        <td><%= group.area %></td>
        <td><%= link_to 'Show', group, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-danger" %></td>
        <td><%= link_to image_tag(group.group_picture.url(:thumb), class: "img-circle"), group %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, class: "btn btn-sm btn-success" %>

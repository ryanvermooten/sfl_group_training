<div class="panel panel-default">
<strong>Information about the Home Gardener's garden</strong>
<%= form_for([@gardener.group, @gardener], :url => wizard_path, :method => :put) do |g| %>
<fieldset>
<p>

<div class="control-group">
<%= g.label :garden_at_home, 'Is the garden located at the residence of the Home Gardener?' %> <br>
<div class="controls">
<%= g.check_box :garden_at_home %>
</div>
</div>
 </p>
<div class="form-actions">
       <%= g.submit 'continue', :class =>  'btn btn-lg btn-success' %>
     <%= link_to "back", previous_wizard_path, class: "btn btn-lg btn-danger" %>
<% end %>
</div>
</fieldset>